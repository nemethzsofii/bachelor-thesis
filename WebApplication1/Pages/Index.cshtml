@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
    <div class="container py-5">
        <!-- Introduction -->
        <div class="text-center mb-5">
            <h1 class="display-4 text-primary font-weight-bold">Welcome to BetterSpend</h1>
            <p class="lead text-secondary">Track your income, expenses, savings, and reach your financial goals with this app!</p>
        </div>

        <div class="row">
            <!-- Income Tracker -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100" style="background: #e3f2fd;">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Income Tracker</h5>
                        <p class="card-text">Record your earnings, and see your financial history.</p>
                    </div>
                    <div class="card-footer">
                    <a href="/Finance" style="display: inline-flex; align-items: center; padding: 12px 20px; background-color: #89CFF0; color: white; text-decoration: none; border-radius: 8px; font-size: 16px; font-weight: 500; box-shadow: 0 2px 8px rgba(0,0,0,0.1); transition: background 0.3s;">
                        Go To Page
                        <i class="fas fa-arrow-right" style="margin-left: 10px;"></i>
                    </a>
                    </div>
                </div>
            </div>

            <!-- Expense Tracker -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100" style="background: #ffebee;">
                    <div class="card-body">
                        <h5 class="card-title text-danger">Expense Tracker</h5>
                        <p class="card-text">Log your daily expenses and monitor where your money goes.</p>
                    </div>
                    <div class="card-footer">
                    <a href="/Finance" style="display: inline-flex; align-items: center; padding: 12px 20px; background-color: #FF7779; color: white; text-decoration: none; border-radius: 8px; font-size: 16px; font-weight: 500; box-shadow: 0 2px 8px rgba(0,0,0,0.1); transition: background 0.3s;">
                            Go To Page
                            <i class="fas fa-arrow-right" style="margin-left: 10px;"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Savings Goals -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100" style="background: #e8f5e9;">
                    <div class="card-body">
                        <h5 class="card-title text-success">Savings Goals</h5>
                        <p class="card-text">Set financial goals and track your progress toward achieving them.</p>
                    </div>
                    <div class="card-footer">
                    <a href="Finance" style="display: inline-flex; align-items: center; padding: 12px 20px; background-color: #008000; color: white; text-decoration: none; border-radius: 8px; font-size: 16px; font-weight: 500; box-shadow: 0 2px 8px rgba(0,0,0,0.1); transition: background 0.3s;">
                            Go To Page
                            <i class="fas fa-arrow-right" style="margin-left: 10px;"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reports Section -->
        <div class="row mt-4">
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm border-0 h-100" style="background: #fff3e0;">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Reports</h5>
                        <p class="card-text">Get visual insights into your finances with charts and summaries.</p>
                    </div>
                    <div class="card-footer">
                    <a href="Finance/Reports" style="display: inline-flex; align-items: center; padding: 12px 20px; background-color: #FFD32C; color: white; text-decoration: none; border-radius: 8px; font-size: 16px; font-weight: 500; box-shadow: 0 2px 8px rgba(0,0,0,0.1); transition: background 0.3s;">
                            Go To Page
                            <i class="fas fa-arrow-right" style="margin-left: 10px;"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card shadow-sm border-0 h-100" style="background: #f3e5f5;">
                    <div class="card-body">
                        <h5 class="card-title text-purple">Group Budgets</h5>
                        <p class="card-text">Manage shared budgets with friends, family, or partners in a collaborative space.</p>
                    </div>
                    <div class="card-footer">
                    <a href="Groups/Index" style="display: inline-flex; align-items: center; padding: 12px 20px; background-color: #ED80E9; color: white; text-decoration: none; border-radius: 8px; font-size: 16px; font-weight: 500; box-shadow: 0 2px 8px rgba(0,0,0,0.1); transition: background 0.3s;">
                            Go To Page
                            <i class="fas fa-arrow-right" style="margin-left: 10px;"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>